#!/bin/sh
# build RiCOM - compile and link
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src/sisl3dmod.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src/ADSolver.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src/lagitRK2adjG2.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src/OpenFileCMD.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src/pcgsolverNM.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src/RCMOutputRW.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src/RiCOM.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src/RiCOMsubs.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src/SurfaceBC.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src-usr/ADclosure.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src-usr/ADSoln.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src-usr/density.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src-usr/FormDragSubs.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src-usr/InitTestCases.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src-usr/InitUsrCases.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src-usr/NullUsrSubs.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src-usr/okada_subs.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src-usr/sediment.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src-usr/turbulence-ke.f90
gfortran -c -fdefault-real-8 -O2 -fdefault-double-8 ../src-usr/Uclosuresubs.f90
gfortran *.o -o ../bin/ricom12gf
rm *.o
